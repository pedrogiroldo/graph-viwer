generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  name          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  following     User[]   @relation("UserFollows")
  followers     User[]   @relation("UserFollows")
  followerPosts Post[]   @relation("FollowerPosts")
  followingPosts Post[]  @relation("FollowingPosts")
}

model Post {
  id          Int      @id @default(autoincrement())
  follower    User     @relation("FollowerPosts", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  Int
  following   User     @relation("FollowingPosts", fields: [followingId], references: [id], onDelete: Cascade)
  followingId Int
  action      String   // "follow" ou "unfollow"
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([followerId])
  @@index([followingId])
}
